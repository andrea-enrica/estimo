<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="20240730-1205" author="teamaia">
        <createTable tableName="sessions">
            <column name="id" type="bigint" autoIncrement="true" startWith="1" incrementBy="1">
            <constraints primaryKey="true"/>
            </column>
            <column name="date_created" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">>
                <constraints nullable="false"/>
            </column>
            <column name="date_ended" type="timestamp"/>


            <column name="status" type="varchar(256)" defaultValue="CREATED">
                <constraints nullable="false"/>
            </column>
            <column name="custom_values" type="varchar(256)"/>
            <column name="value_type" type="varchar(256)"/>
            <column name="creator_id" type="bigint"/>
            <column name="session_manager_id" type="bigint"/>


        </createTable>
        <addForeignKeyConstraint  baseColumnNames="creator_id"
                                  baseTableName="sessions"
                                  constraintName="fk_creator_session"
                                  deferrable="true"
                                  initiallyDeferred="true"
                                  onDelete="CASCADE"
                                  onUpdate="CASCADE"
                                  referencedColumnNames="id"
                                  referencedTableName="users"
        />
        <addForeignKeyConstraint  baseColumnNames="session_manager_id"
                                  baseTableName="sessions"
                                  constraintName="fk_manager_session"
                                  deferrable="true"
                                  initiallyDeferred="true"
                                  onDelete="CASCADE"
                                  onUpdate="CASCADE"
                                  referencedColumnNames="id"
                                  referencedTableName="users"
        />
    </changeSet>

</databaseChangeLog>
